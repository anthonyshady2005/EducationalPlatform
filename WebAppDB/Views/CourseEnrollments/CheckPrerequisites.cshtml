@model WebAppDB.Models.CourseEnrollment
@{
    ViewData["Title"] = "Check Prerequisites";
}

<h1>Check Prerequisites</h1>

<form asp-action="CheckPrerequisites" method="post">
    <div class="form-group">
        <label asp-for="LearnerId" class="control-label"></label>
        <input asp-for="LearnerId" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CourseId" class="control-label"></label>
        <input asp-for="CourseId" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Check" class="btn btn-primary" />
    </div>
</form>

@if (ViewData["PrerequisitesCompleted"] != null)
{
    <div class="alert alert-info">
        @if ((bool)ViewData["PrerequisitesCompleted"])
        {
            <p>All prerequisites are completed.</p>
        }
        else
        {
            <p>Not all prerequisites are completed.</p>
        }
    </div>
}
<div>
    <a asp-action="BackButton">Back to page</a>
</div>

