@model IEnumerable<WebAppDB.Models.Achievement>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateEarned)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Badge)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Learner)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateEarned)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Badge.BadgeId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Learner.LearnerId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AchievementId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AchievementId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AchievementId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<div style="position: fixed; bottom: 10px; right: 10px;">
    <a asp-action="BackButton">Back to page</a>
</div>