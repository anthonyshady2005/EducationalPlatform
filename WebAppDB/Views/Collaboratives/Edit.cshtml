@model WebAppDB.Models.Collaborative

@{
    ViewData["Title"] = "Edit";
}



<h4>Collaborative</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="QuestId" />
            <div class="form-group">
                <label asp-for="Deadline" class="control-label"></label>
                <input asp-for="Deadline" class="form-control" />
                <span asp-validation-for="Deadline" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxNumParticipants" class="control-label"></label>
                <input asp-for="MaxNumParticipants" class="form-control" />
                <span asp-validation-for="MaxNumParticipants" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div style="position: fixed; bottom: 10px; right: 10px;">
    <a asp-action="BackButton">Back to page</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
