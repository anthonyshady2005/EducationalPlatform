@model WebAppDB.Models.Collaborative

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Collaborative</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="QuestId" class="control-label"></label>
                <select asp-for="QuestId" class ="form-control" asp-items="ViewBag.QuestId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Deadline" class="control-label"></label>
                <input asp-for="Deadline" class="form-control" type="date" />
                <span asp-validation-for="Deadline" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MaxNumParticipants" class="control-label"></label>
                <input asp-for="MaxNumParticipants" class="form-control" />
                <span asp-validation-for="MaxNumParticipants" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div style="position: fixed; bottom: 10px; right: 10px;">
    <a asp-action="BackButton">Back to page</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
